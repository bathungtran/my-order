<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/restaurantitemcolor"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:foreground="@drawable/ripple_effect"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgRestaurantLogo"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <TextView

            android:layout_toRightOf="@id/imgRestaurantLogo"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/txtRestaurantName" />
        <TextView

            android:layout_toRightOf="@id/imgRestaurantLogo"
            android:layout_below="@id/txtRestaurantName"
            android:text="Restaurant Address"
            android:textColor="#47574d"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRestaurantAddress" />

        <TextView

            android:layout_toRightOf="@id/imgRestaurantLogo"
            android:layout_below="@id/txtRestaurantAddress"
            android:id="@+id/txtRestaurantDiscription"
            android:layout_marginTop="2sp"
            android:textColor="#8e9fa9"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Discription" />
    </RelativeLayout>

</android.support.v7.widget.CardView>